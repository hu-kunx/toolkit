{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src"
  ]
}
